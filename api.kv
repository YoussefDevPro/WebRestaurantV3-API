MainWidget:

<MainWidget>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Order"
        OrderView:
            id: order_view
    TabbedPanelItem:
        text: "Reservation"
        ReservationView:
            id: reservation_view

<OrderView>:
    padding: 10
    spacing: 10

<OrderItem>:
    orientation: "lr-tb"
    padding: 10
    spacing: 20
    size_hint_y: None
    height: self.minimum_height

<ReservationView>:
    padding: 10
    spacing: 30

<ReservationItem>:
    orientation: "lr-tb"
    padding: 10
    spacing: 20
    size_hint_y: None
    height: self.minimum_height