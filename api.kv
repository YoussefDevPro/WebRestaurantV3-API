MainWidget:

<MainWidget>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Order"
        OrderView:
            id: order_view
    TabbedPanelItem:
        text: "Reservation"
        ReservationView:
            id: reservation_view

<OrderView>:
    padding: 10
    spacing: 10
    size_hint_y: None
    height: self.minimum_height

<OrderItem>:
    orientation: "vertical"
    padding: 10
    spacing: 20

<OrderedProductItem>:
    orientation: "horizontal"
    padding: 5
    spacing: 5
    Label:
        text: root.nom
        size_hint_x: 0.7
    Label:
        text: root.prix
        size_hint_x: 0.3

<ReservationView>:
    padding: 10
    spacing: 30
    size_hint_y: None
    height: self.minimum_height

<ReservationItem>:
    orientation: "vertical"
    padding: 10
    spacing: 20
